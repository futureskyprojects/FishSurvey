<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context=".View.fsHome"
    tools:showIn="@layout/app_bar_fs_home">
    <LinearLayout
        android:visibility="invisible"
        android:id="@+id/all_families"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/background_home"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="120dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginBottom="5dp"
            android:orientation="horizontal"
            android:weightSum="2">

            <ImageView
                android:id="@+id/fsc_g1"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginEnd="5dp"
                android:layout_marginRight="5dp"
                android:layout_weight="1"
                android:background="@drawable/background_image"
                android:scaleType="fitXY"
                android:src="@drawable/g1" />

            <ImageView
                android:id="@+id/fsc_g2"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginStart="5dp"
                android:layout_marginLeft="5dp"
                android:layout_weight="1"
                android:background="@drawable/background_image"
                android:scaleType="fitXY"
                android:src="@drawable/g2" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="120dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="5dp"
            android:layout_marginRight="10dp"
            android:layout_marginBottom="5dp"
            android:orientation="horizontal"
            android:weightSum="2">

            <ImageView
                android:id="@+id/fsc_g3"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginEnd="5dp"
                android:layout_marginRight="5dp"
                android:layout_weight="1"
                android:background="@drawable/background_image"
                android:scaleType="fitXY"
                android:src="@drawable/g3" />

            <ImageView
                android:id="@+id/fsc_g4"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginStart="5dp"
                android:layout_marginLeft="5dp"
                android:layout_weight="1"
                android:background="@drawable/background_image"
                android:scaleType="fitXY"
                android:src="@drawable/g4" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="120dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="5dp"
            android:layout_marginRight="10dp"
            android:layout_marginBottom="5dp"
            android:orientation="horizontal"
            android:weightSum="2">

            <ImageView
                android:id="@+id/fsc_g5"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginEnd="5dp"
                android:layout_marginRight="5dp"
                android:layout_weight="1"
                android:background="@drawable/background_image"
                android:scaleType="fitXY"
                android:src="@drawable/g5" />

            <ImageView
                android:id="@+id/fsc_g6"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginStart="5dp"
                android:layout_marginLeft="5dp"
                android:layout_weight="1"
                android:background="@drawable/background_image"
                android:scaleType="fitXY"
                android:src="@drawable/g6" />
        </LinearLayout>

        <Button
            android:id="@+id/fsc_other_btn"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_alignParentBottom="true"
            android:background="@drawable/btn_other_flat"
            android:text="@string/otherCategorize"
            android:textColor="@android:color/white" />
    </LinearLayout>
    <TextView
        android:id="@+id/no_trip_show"
        android:textStyle="bold"
        android:shadowRadius="1"
        android:shadowDy="2"
        android:shadowDx="2"
        android:shadowColor="@color/colorAccent"
        android:textSize="24sp"
        android:textColor="@android:color/holo_red_dark"
        android:gravity="center"
        android:background="@drawable/background_home"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:text="Vui lòng tạo chuyến mới"/>
</android.support.constraint.ConstraintLayout>

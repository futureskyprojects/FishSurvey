<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background_home"
    tools:context=".View.fsSaveSuccessfulActivity">

    <!--<ImageView-->
        <!--android:scaleType="centerCrop"-->
        <!--android:id="@+id/fssr_image_view"-->
        <!--android:layout_width="match_parent"-->
        <!--android:layout_height="match_parent"-->
        <!--android:layout_above="@id/fss_bottom_group"-->
        <!--android:layout_marginBottom="@dimen/standard_margin"-->
        <!--android:src="@drawable/ic_error_404" />-->
    <com.smarteist.autoimageslider.SliderLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@id/fss_bottom_group"
        android:layout_marginBottom="@dimen/standard_margin"
        android:layout_alignParentTop="true"
        android:id="@+id/imageSlider2"/>
    <LinearLayout
        android:background="#26FFFFFF"
        android:padding="5dp"
        android:id="@+id/fss_bottom_group"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="10dp">

            <TextView
                android:shadowColor="@android:color/white"
                android:shadowDx="3"
                android:shadowDy="3"
                android:shadowRadius="2"
                android:textColor="@color/colorAccent"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:drawableStart="@drawable/ic_dog_tag"
                android:drawableLeft="@drawable/ic_dog_tag"
                android:drawablePadding="5dp"
                android:textSize="18sp"
                android:gravity="center|left"
                android:text="@string/fish_name" />

            <TextView
                android:paddingLeft="20sp"
                android:id="@+id/fssr_fish_name"
                android:shadowColor="@android:color/white"
                android:shadowDx="3"
                android:shadowDy="3"
                android:shadowRadius="2"
                android:textColor="@color/red"
                android:textSize="16sp"
                android:textStyle="bold"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="right"
                android:text="Con cá dài nhất hành tinh" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="10dp">

            <TextView
                android:shadowColor="@android:color/white"
                android:shadowDx="3"
                android:shadowDy="3"
                android:shadowRadius="2"
                android:textColor="@color/colorAccent"
                android:drawablePadding="5dp"
                android:textSize="18sp"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:drawableStart="@drawable/ic_tool"
                android:drawableLeft="@drawable/ic_tool"
                android:gravity="center|left"
                android:text="@string/fish_long" />

            <TextView
                android:id="@+id/fssr_length"
                android:shadowColor="@android:color/white"
                android:shadowDx="3"
                android:shadowDy="3"
                android:shadowRadius="2"
                android:textColor="@color/red"
                android:textSize="16sp"
                android:textStyle="bold"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="right"
                android:text="50 cm" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="10dp">

            <TextView
                android:shadowColor="@android:color/white"
                android:shadowDx="3"
                android:shadowDy="3"
                android:shadowRadius="2"
                android:textColor="@color/colorAccent"
                android:drawablePadding="5dp"
                android:textSize="18sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawableStart="@drawable/ic_weight"
                android:drawableLeft="@drawable/ic_weight"
                android:gravity="center|left"
                android:text="@string/fish_weight" />

            <TextView
                android:id="@+id/fssr_weight"
                android:shadowColor="@android:color/white"
                android:shadowDx="3"
                android:shadowDy="3"
                android:shadowRadius="2"
                android:textColor="@color/red"
                android:textSize="16sp"
                android:textStyle="bold"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="right"
                android:text="50 kg" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="10dp">

            <TextView
                android:shadowColor="@android:color/white"
                android:shadowDx="3"
                android:shadowDy="3"
                android:shadowRadius="2"
                android:textColor="@color/colorAccent"
                android:drawablePadding="5dp"
                android:textSize="18sp"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:drawableStart="@drawable/ic_location_pointer"
                android:drawableLeft="@drawable/ic_location_pointer"
                android:gravity="center|left"
                android:text="@string/fish_location" />

            <TextView
                android:id="@+id/fssr_position"
                android:shadowColor="@android:color/white"
                android:shadowDx="3"
                android:shadowDy="3"
                android:shadowRadius="2"
                android:textColor="@color/red"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="right"
                android:text="Lat: 12445\nLng: 456777"
                android:textSize="16sp"
                android:textStyle="bold" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="10dp">

            <TextView
                android:shadowColor="@android:color/white"
                android:shadowDx="3"
                android:shadowDy="3"
                android:shadowRadius="2"
                android:textColor="@color/colorAccent"
                android:drawablePadding="5dp"
                android:textSize="18sp"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:drawableStart="@drawable/ic_clock"
                android:drawableLeft="@drawable/ic_clock"
                android:gravity="center|left"
                android:text="@string/fish_catched_time" />

            <TextView
                android:id="@+id/fssr_time"
                android:shadowColor="@android:color/white"
                android:shadowDx="3"
                android:shadowDy="3"
                android:shadowRadius="2"
                android:textColor="@color/red"
                android:textSize="16sp"
                android:textStyle="bold"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="right"
                android:text="13h20 - 31/12/2018" />
        </LinearLayout>

        <Button
            android:id="@+id/fssr_close_btn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/warning_stroke_color"
            android:textStyle="bold"
            android:text="@string/close"
            android:textColor="@android:color/white" />
    </LinearLayout>
</RelativeLayout>

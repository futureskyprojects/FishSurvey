<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".View.fsCategorizeActivity">

    <GridView
        android:layout_alignParentTop="true"
        android:id="@+id/fsc_categorizes_view"
        android:layout_width="match_parent"
        android:numColumns="3"
        android:gravity="center"
        android:layout_above="@id/fsc_other_btn"
        android:layout_height="match_parent"/>

    <Button
        android:id="@+id/fsc_other_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="@drawable/btn_other_flat"
        android:text="@string/otherCategorize"
        android:textColor="@android:color/white" />
    <com.skyfishjy.library.RippleBackground
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_above="@id/fsc_other_btn"
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:id="@+id/fsc_btn_bottom"
        app:rb_color="#0099CC"
        app:rb_radius="9dp"
        app:rb_rippleAmount="6"
        app:rb_duration="3000"
        app:rb_scale="6">
        <ImageView
            android:layout_centerInParent="true"
            android:layout_width="18dp"
            android:layout_height="18dp"
            android:id="@+id/fsc_btn_bottom_arrow"
            android:src="@drawable/ic_down_arrow"/>
    </com.skyfishjy.library.RippleBackground>
</RelativeLayout>